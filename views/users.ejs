<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="resources/style.css">
    <title>Codebar 2.0</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
<body class="body">
    <%- include('navbar') %>
    <% if (login) { %> 
        <div class="d-flex justify-content-center text-white"style="opacity: 0.9;">
            <div class="d-flex flex-column w-50 text-center bg-white rounded-3 ">
                <div class="actualizar bg-info rounded-3">
                    <h2 style="font-weight:bold;">REGISTRAR USUARIO</h2>
                </div> 
                <div class="m-5">
                    <form action="/register" method="POST">
                        <div class="row align-items-start">
                            <input type="text" id="id" name="id" hidden value="">
                            <div class="col text-black">
                                <label for="user" class="form-label"style="font-weight:bold; font-size: 15px;">USER</label>
                                <input type="text"class="form-control" style="font-weight:bold;font-size: 13px;" name="user" required tabindex="1" autofocus>
                            </div>
                            <div class="col text-black">
                                <label for="user"class="form-label"style="font-weight:bold; font-size: 15px;">FULL NAME</label>
                                <input type="text" class="form-control"style="font-weight:bold;font-size: 13px;"name="name" required tabindex="2">
                            </div>
                            <div class="col text-black">
                                <label for="rol"class="form-label"style="font-weight:bold; font-size: 15px;">ROL</label>                          
                                <select id="rol" class="form-control"name="rol" style="font-weight:bold;font-size: 13px;"class="select-css" tabindex="3">
                                    <option value="admin" >Admin</option>
                                    <option value="user" selected>user</option>                    
                                </select>
                            </div>
                            <div class="col text-black">
                                <label for="pass"class="form-label"style="font-weight:bold; font-size: 15px;">PASSWORD</label><br> 
                                <input type="password" class="form-control"name="pass" style="font-weight:bold;font-size: 13px;"required tabindex="4">
                            </div>
                            <div class="col text-black">
                                <input type="submit" class="btn btn-primary p-2 m-4" style="font-weight:bold; font-size: 15px;"value="Registrar">
                            </div>
                        </div>
                    </form>
                </div>
                <table class="container table table-primary table-hover">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">USER</th>
                            <th scope="col">Full Name</th>
                            <th scope="col">ROL</th>
                            <th scope="col">ACCION</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(typeof users != 'undefined') {%>
                        <%users.forEach((user) => {%>
                        <tr>
                            <td><%= user.id %></td>
                            <td><%= user.user %></td>
                            <td><%= user.name %></td>
                            <td><%= user.rol %></td>
                            <td>
                                <a href="/edit/<%=user.id%>"><button class="btn btn-primary"><i class="fa fa-edit"></i></button></a>
                                <a href="/delete/<%=user.id%>"><button class="btn btn-danger"><i class="fa fa-trash"></i></button></a>
                            </td>
                        </tr>
                        <%})%> 
                        <%}%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <%} %> 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>